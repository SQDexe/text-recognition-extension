{
    "manifest_version": 2,
    "name": "Text Recognition",
    "version": "1.0",
    "description": "A simple extension with a Paste button",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "css": ["style.css"],
        "js": ["jquery.js", "script.js"]
      }
    ],     
    "permissions": [
      "clipboardRead",
      "clipboardWrite"
    ]
}
  